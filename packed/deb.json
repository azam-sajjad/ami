

{
    "packer": {
        "required_plugins": {
          "ansible": {
          "version": "~> 1",
          "source": "github.com/hashicorp/ansible"
          }
        }
    },

    "variables": {
        "SourceAMI_name": "debian-12-amd64-*-1532",
        "SourceAMI_owner": "136693071363",
        "instance_role": "ec2AdminRole",
        "Distribution": "debian",
        "Version": "12",
        "Date": "08-04-2024"
          },

    "builders": [
      {
        "type": "amazon-ebs",
        "region": "us-east-2",
        "ami_name": "ComplianceX-Debian-{{user `Version`}}",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "{{user `SourceAMI_name`}}",
                "root-device-type": "ebs"
                },
            "owners": ["{{user `SourceAMI_owner}}"],
            "most_recent": true
        },
        "instance_type": "t2.micro",
        "ssh_username": "admin",
        "vpc_id":       "vpc-064cc6af096ddb922",
        "subnet_id": "subnet-0874feb927025106b",
        "associate_public_ip_address": true,
        "ssh_interface": "public_ip",
        "security_group_ids": ["sg-0a3c26792e780c4c0"],
        "iam_instance_profile": "{{user `instance_role`}}",
        "launch_block_device_mappings": [
            {
            "device_name": "/dev/sda1",
            "volume_size": 8,
            "volume_type": "gp2",
            "delete_on_termination": true
            }
            ],
        "ami_block_device_mappings": [
            {
            "device_name": "/dev/sdb",
            "volume_size": 25,
            "volume_type": "gp2",
            "delete_on_termination": false,
            "virtual_name": ""
            }
        ],
        "tags": {
            "Name": "ltscale-{{user `Distribution`}}{{user `Version`}}-{{user `Date`}}",
            "Permission": "Allowed",
            "Source_AMI": "{{user `SourceAMIName`}}"
            }
     }
    ],
    "provisioners": [
        
        {
            "type":     "shell",
            "inline":   ["chmod u+x /home/ec2-user/tasks/8-CICD/Jenkins/scripts/deb/ansible.sh","sudo bash /home/ec2-user/tasks/8-CICD/Jenkins/scripts/deb/ansible.sh"]
            
        },
        {
            "type": "ansible-local",
            "playbook_file": "../ansible/deb-playbook.yml"
        },
        {
            "type":     "shell",
            "inline":   ["chmod u+x /home/ec2-user/tasks/8-CICD/Jenkins/scripts/deb/cleanup.sh","sudo bash /home/ec2-user/tasks/8-CICD/Jenkins/scripts/deb/cleanup.sh"]
  
        }
    ]

}